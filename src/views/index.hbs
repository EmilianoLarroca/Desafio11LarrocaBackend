<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='../public/css/index.css' />
    <title>Inicio</title>
  </head>
  <body >
    <section>
      <div class="container">
        {{#each productos}}
        <div class="card">
          <div class="product-image">
            <img src="{{this.thumbnail}}" alt="">
          </div>
          <div class="product-info">
            <h4 ><strong class="titleProducts">{{this.title}}</strong></h4>
            <p><strong class="descriptionProducts">Descripcion: </strong>{{this.description}}</p>
            <p><strong class="pProducts">Categoria: </strong>{{this.category}}</p>
            <p><strong class="pProducts">Stock: </strong>{{this.stock}}</p>
            <p><strong class="pProductss">Codigo: </strong>{{this._id}}</p>
            <p><strong class="pProducts">Precio: </strong>${{this.price}}</p>
          </div>
            <div class="btn">
              <button type="submit">Agregar al carrito</button>
              <a href="/product/{{this._id}}" class="btn btn-outline-dark text-center m-2">Ver detalle</a>
            </div>
        </div>
        {{/each}}
      </div>
      
</section>
    <script src='/socket.io/socket.io.js'></script>
    <script src='/js/index.js'></script>
  </body>
</html>